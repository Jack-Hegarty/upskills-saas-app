<div class="container">
    <div class="row text-center">
        <h1>Contact</h1>
        <p>Please fill out the contact form below for more information!</p>
    </div><!-- End Row #1 -->
    
    <div class="row">
        <div class="col-md-4 col-lg-offset-4">
            <%= flash[:notice] %>
            <div class="well">
                <%= form_for @contact do |f| %>
                    <div class="form-group">
                        <%= f.label :name %>
                        <%= f.text_field :name, class: 'form-control' %>
                    </div>
                    
                    <div class="form-group">
                        <%= f.label :email %>
                        <%= f.text_field :email, class: 'form-control' %>
                    </div>
                    
                    <div class="form-group">
                        <%= f.label :comments %>
                        <%= f.text_area :comments, class: 'form-control' %>
                    </div>
                    
                        <%= f.submit 'submit', class: 'btn btn-lrg btn-default' %>
                        
                <% end %>
            </div><!-- End Well -->
        </div><!-- End Col -->
    </div><!-- End Row #2 -->
</div><!-- End Container -->