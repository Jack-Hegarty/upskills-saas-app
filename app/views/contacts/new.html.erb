<div class="container text-center">
    <h1>Contact</h1>
    <p>Please fill out the contact form below for more information!</p>
    
    <%= form_for "/contacts" do |f| %>
    
        <%= f.label :name %>
        <%= f.text_field :name %>
        
        <%= f.label :email %>
        <%= f.text_field :email %>
        
        <%= f.label :comments %>
        <%= f.text_area :comments %>
        
        <%= f.submit 'submit' %>
    <% end %>
    
</div>